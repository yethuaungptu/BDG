<!DOCTYPE html>
<html data-theme="BDG">
  <head>
    <title>Buddhism Dhamma Guide</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/aos.css" />
    <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css" />
    <script src="/javascripts/swiper-bundle.min.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <% include ./partial/navbar.ejs %>

    <div class="aos-all min-h-screen">
      <div class="swiper" data-aos="fade-up">
        <div class="swiper-wrapper">
          <!-- Slides -->
          <div class="swiper-slide">
            <div class="w-full h-[15vh] lg:h-[40vh]">
              <img src="/images/meditate-1.jpg" class="w-full object-cover" />
              <div
                class="absolute top-1/2 left-5 lg:left-16 -translate-y-1/2 text-white space-y-4"
              >
                <h2 class="text-3xl lg:text-5xl font-bold drop-shadow-md">
                  <%= __('nav.meditate') %>
                </h2>
              </div>
            </div>
          </div>
          <div class="swiper-slide">
            <div class="w-full h-[15vh] lg:h-[40vh]">
              <img src="/images/meditate-2.jpg" class="w-full object-cover" />
              <div
                class="absolute top-1/2 left-5 lg:left-16 -translate-y-1/2 text-white space-y-4"
              >
                <h2 class="text-3xl lg:text-5xl font-bold drop-shadow-md">
                  <%= __('nav.meditate') %>
                </h2>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="text-lg text-center"><%= __('nav.meditate') %></div>
      <div class="flex justify-end p-4">
        <form action="/meditate" class="ml-auto" method="get">
          <div class="join">
            <div>
              <label class="input validator join-item">
                <svg
                  class="h-[1em] opacity-50"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                >
                  <g
                    stroke-linejoin="round"
                    stroke-linecap="round"
                    stroke-width="2.5"
                    fill="none"
                    stroke="currentColor"
                  >
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.3-4.3"></path>
                  </g>
                </svg>
                <input
                  type="search"
                  name="keyword"
                  value="<%= keyword %>"
                  placeholder="Search"
                />
              </label>
            </div>
            <button type="submit" class="btn btn-neutral join-item">
              Search
            </button>
          </div>
        </form>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-3 p-2 gap-2">
        <% for(var i = 0; i < meditates.length; i++){%>
        <div class="card w-full bg-base-100 card-sm shadow-sm">
          <div class="card-body">
            <h2 class="card-title"><%= meditates[i].title %></h2>
            <p><%= meditates[i].guider %></p>
            <div class="justify-end card-actions">
              <a
                href="/meditate/detail/<%= meditates[i]._id %>"
                class="btn btn-primary"
                ><%= __('seeMore') %></a
              >
            </div>
          </div>
        </div>
        <%}%>
      </div>
    </div>
    <% include ./partial/footer.ejs %>
  </body>
  <script src="/javascripts/aos.js"></script>
  <script>
    AOS.init({
      mirror: true,
    });
    const swiper = new Swiper(".swiper", {
      // Optional parameters
      direction: "horizontal",
      loop: true,
      pagination: {
        el: ".swiper-pagination",
      },
      autoplay: {
        delay: 5000,
      },
    });
  </script>
</html>
