<!DOCTYPE html>
<html data-theme="pastel">
  <head>
    <title>Buddhism Dhamma Guide Admin</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/stylesheets/quill.snow.css" rel="stylesheet" />

    <!-- Quill JS -->
    <script src="/javascripts/quill.js"></script>
  </head>
  <body>
    <div id="root">
      <div class="drawer lg:drawer-open">
        <input id="left-sidebar-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
          <div class="navbar sticky top-0 bg-base-100 z-10 shadow-md">
            <div class="flex-1">
              <label
                for="left-sidebar-drawer"
                class="btn btn-primary drawer-button lg:hidden"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                  class="h-5 inline-block w-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                  ></path>
                </svg>
              </label>
              <h1 class="text-2xl font-semibold ml-2"></h1>
            </div>
          </div>
          <main class="flex-1 overflow-y-auto md:pt-4 pt-4 px-6 bg-base-200">
            <div class="card w-full p-6 bg-base-100 shadow-xl mt-2">
              <div class="text-xl font-semibold">
                <%= __('nav.gsp') %> <%= __('create') %>
              </div>
              <div class="divider mt-2"></div>
              <div class="h-full w-full pb-6 bg-base-100">
                <form
                  class="p-6 rounded-xl shadow space-y-6"
                  action="/admin/gsp/create"
                  method="post"
                >
                  <div class="form-control my-5">
                    <label class="label">
                      <span class="label-text">MM Title</span>
                    </label>
                    <input
                      type="text"
                      name="titleMM"
                      placeholder="Enter MM title"
                      class="input input-bordered w-full"
                    />
                  </div>
                  <div class="form-control my-5">
                    <label class="label">
                      <span class="label-text">EN Title</span>
                    </label>
                    <input
                      type="text"
                      name="titleEN"
                      placeholder="Enter EN title"
                      class="input input-bordered w-full"
                    />
                  </div>
                  <div class="form-control my-5">
                    <label class="label">
                      <span class="label-text">Category</span>
                    </label>
                    <select class="select w-full" name="category">
                      <option value="ဓမ္မဂါထာ">ဓမ္မဂါထာ</option>
                      <option value="သုတ္တန်">သုတ္တန်</option>
                      <option value="ဘုရား၀တ်ပြုနည်း">ဘုရား၀တ်ပြုနည်း</option>
                    </select>
                  </div>
                  <div class="form-control my-5">
                    <label class="label">
                      <span class="label-text">MM content</span>
                    </label>
                    <!-- Quill Editor -->
                    <div id="editor"></div>
                    <!-- Hidden input for form submission -->
                    <input type="hidden" name="mmContent" id="mmContent" />
                  </div>

                  <div class="form-control my-5">
                    <label class="label">
                      <span class="label-text">EN content(optional)</span>
                    </label>
                    <!-- Quill Editor -->
                    <div id="enEditor"></div>
                    <!-- Hidden input for form submission -->
                    <input type="hidden" name="enContent" id="enContent" />
                  </div>

                  <button type="submit" class="btn btn-primary w-full">
                    Submit
                  </button>
                </form>
              </div>
            </div>
            <div class="h-16"></div>
          </main>
        </div>
        <% include ../../partial/adminDrawer %>
      </div>
    </div>
  </body>
  <script>
    const quill = new Quill("#editor", {
      theme: "snow",
    });

    const quillEn = new Quill("#enEditor", {
      theme: "snow",
    });
    const form = document.querySelector("form");
    const mmContent = document.getElementById("mmContent");
    const enContent = document.getElementById("enContent");

    form.addEventListener("submit", function (e) {
      mmContent.value = quill.root.innerHTML;
      enContent.value = quillEn.root.innerHTML;
    });
  </script>
</html>
