<!DOCTYPE html>
<html data-theme="BDG">
  <head>
    <title>Buddhism Dhamma Guide Admin</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div id="root">
      <div class="drawer lg:drawer-open">
        <input id="left-sidebar-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
          <div class="navbar sticky top-0 bg-base-100 z-10 shadow-md">
            <div class="flex-1">
              <label
                for="left-sidebar-drawer"
                class="btn btn-primary drawer-button lg:hidden"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                  class="h-5 inline-block w-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                  ></path>
                </svg>
              </label>
              <h1 class="text-2xl font-semibold ml-2"></h1>
            </div>
          </div>
          <main class="flex-1 overflow-y-auto md:pt-4 pt-4 px-6 bg-base-200">
            <div class="max-w-4xl mx-auto p-6 space-y-6">
              <!-- Title and Meta Info -->
              <div
                class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2"
              >
                <div>
                  <h1 class="text-2xl font-bold text-primary">
                    <%= resolution.titleMM %>
                  </h1>
                  <h2 class="text-lg text-gray-600">
                    <%= resolution.titleEN %>
                  </h2>
                </div>
                <% if(resolution.isFeatured){%>
                <div class="badge badge-success text-white text-sm">
                  Featured
                </div>
                <%}%>
              </div>

              <!-- Image -->
              <div class="w-full rounded-lg overflow-hidden shadow">
                <img
                  src="<%= resolution.image %>"
                  alt="Meditation Image"
                  class="w-full h-auto object-cover"
                />
              </div>

              <!-- Meta Info -->
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
                <div class="bg-base-100 rounded-lg shadow p-4">
                  <div class="font-semibold">Start Day</div>
                  <div><%= resolution.startDay %></div>
                </div>
                <div class="bg-base-100 rounded-lg shadow p-4">
                  <div class="font-semibold">Duration</div>
                  <div><%= resolution.durationDays %> Days</div>
                </div>
                <div class="bg-base-100 rounded-lg shadow p-4">
                  <div class="font-semibold">Remark</div>
                  <div><%= resolution.remark ? resolution.remark:"" %></div>
                </div>
              </div>

              <!-- Description -->
              <div class="prose max-w-none">
                <h3 class="text-xl font-semibold mt-8 mb-4 text-primary">
                  Content
                </h3>
                <p id="contentMM"></p>
                <br />
                <p class="text-gray-700" id="contentEN"></p>
              </div>

              <!-- Steps -->
              <div>
                <h3 class="text-xl font-semibold mt-8 mb-4 text-primary">
                  ðŸªœ Process Steps
                </h3>
                <div class="space-y-3">
                  <% for(var i = 0; i < resolution.steps.length;i++){%>
                  <div class="card bg-base-100 shadow p-4">
                    <h4 class="font-bold">
                      Step <%= resolution.steps[i].number %>
                    </h4>
                    <p class="text-sm text-gray-600">
                      <%= resolution.steps[i].descriptionMM %>
                    </p>
                    <p class="text-sm text-gray-600">
                      <%= resolution.steps[i].descriptionEN %>
                    </p>
                  </div>
                  <%}%>
                </div>
              </div>

              <!-- Daily Tasks -->
              <div>
                <h3 class="text-xl font-semibold mt-10 mb-4 text-primary">
                  ðŸ“† Daily Tasks
                </h3>
                <div
                  class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-h-[600px] overflow-y-auto pr-1"
                >
                  <% for(var i = 0; i < resolution.dailyTasks.length;i++){%>
                  <div class="card bg-base-100 shadow p-4">
                    <div class="font-semibold text-lg">
                      Day <%= resolution.dailyTasks[i].day %> - <%=
                      resolution.dailyTasks[i].titleEN %>
                    </div>
                    <div class="text-lg font-semibold text-gray-500 mb-2">
                      á€”á€±á€· <%= resolution.dailyTasks[i].day %> - <%=
                      resolution.dailyTasks[i].titleMM %>
                    </div>
                    <p class="text-sm">
                      <%= resolution.dailyTasks[i].descriptionEN %>
                    </p>
                    <p class="text-sm text-gray-700 mt-1">
                      <%= resolution.dailyTasks[i].descriptionMM %>
                    </p>
                  </div>
                  <%}%>
                </div>
              </div>
              <div class="divider"></div>
              <div class="card-actions justify-end">
                <% if(resolution.isFeatured){%>
                <button class="btn btn-warning" onclick="changeFeature(false);">
                  Remove featured
                </button>
                <%}else{%>
                <button class="btn btn-warning" onclick="changeFeature(true);">
                  Set as featured
                </button>
                <%}%>
                <button class="btn btn-error" onclick="deleteResolution()">
                  <%= __('delete') %>
                </button>
                <a
                  class="btn btn-info"
                  href="/admin/resolution/update/<%= resolution._id %>"
                  ><%= __('update') %></a
                >
              </div>
            </div>

            <div class="h-16"></div>
          </main>
        </div>
        <% include ../../partial/adminDrawer %>
      </div>
    </div>
  </body>
  <script src="/javascripts/jquery-3.7.1.min.js"></script>
  <script>
    $(function () {
      const mmVal =
        "<div><div class='text-lg text-center'>MM Content</div><%- resolution.contentMM %></div>";
      const enVal =
        "<div><div class='text-lg text-center'>EN Content</div><%- resolution.contentEN %></div>";
      $("#contentMM").html("<%- resolution.contentMM %>");
      $("#contentEN").html("<%- resolution.contentEN %>");
    });
    function changeFeature(isFeatured) {
      $.ajax({
        url: "/admin/resolution/feature",
        type: "POST",
        data: {
          resolutionId: "<%= resolution._id %>",
          isFeatured: isFeatured,
        },
        success: function (response) {
          if (response.status === "success") {
            window.location.reload();
          } else {
            alert("Error updating feature status.");
          }
        },
        error: function () {
          alert("Error connecting to the server.");
        },
      });
    }
    function deleteResolution() {
      if (!confirm("Are you sure you want to delete this?")) {
        return;
      }
      $.ajax({
        url: "/admin/resolution/delete",
        type: "POST",
        data: {
          resolutionId: "<%= resolution._id %>",
        },
        success: function (response) {
          if (response.status === "success") {
            location.href = "/admin/resolution";
          } else {
            alert("Error deleting tip");
          }
        },
        error: function () {
          alert("Error connecting to the server.");
        },
      });
    }
  </script>
</html>
