<!DOCTYPE html>
<html data-theme="BDG">
  <head>
    <title>Buddhism Dhamma Guide</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/aos.css" />
    <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css" />
    <script src="/javascripts/swiper-bundle.min.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <% include ./partial/navbar.ejs %>

    <div class="aos-all min-h-screen">
      <!-- name of each tab group should be unique -->
      <div
        class="card w-full p-6 bg-base-100 border border-base-300 shadow-xl mt-2"
      >
        <div class="text-xl font-semibold grid grid-cols-3 items-center">
          <div class="col-span-2"><%= meditate.title %></div>
          <% if (meditate.isFeatured){%>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="gold"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6 items-center justify-self-end"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
            />
          </svg>
          <%}%>
        </div>
        <div class="divider mt-2"></div>
        <div class="card bg-base-100 shadow-sm">
          <% if(meditate.mediaType == "MP4"){%>
          <figure>
            <iframe
              width="560"
              height="315"
              src="<%= meditate.mediaUrl %>"
              title="YouTube video player"
              frameborder="0"
              id="ytplayer"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              referrerpolicy="strict-origin-when-cross-origin"
              allowfullscreen
            ></iframe>
          </figure>
          <%}else{%>
          <audio id="mediaMP3" controls>
            <source src="<%= meditate.mediaUrl %>" type="audio/mp3" />
            Your browser does not support the audio element.
          </audio>
          <%}%>
          <div class="card-body">
            <div class="grid grid-cols-1 lg:grid-cols-5">
              <h2 class="card-title lg:col-span-3">
                Guider : <%= meditate.guider %>
              </h2>
              <h2 class="card-title">Method : <%= meditate.level %></h2>
              <h2 class="card-title">
                Duration : <%= meditate.minutes %>:<%= meditate.seconds %>
              </h2>
              <br />
              <div class="text-lg col-span-full">
                <%= meditate.description %>
              </div>
            </div>
            <audio id="endSound" controls class="hidden">
              <source src="/sound/end.mp3" type="audio/mp3" />
              Your browser does not support the audio element.
            </audio>
            <% if(locals.user){%>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              <div class="card card-sm shadow-md p-3">
                <div class="card-title text-center">Time Left</div>
                <div class="card-body">
                  <div class="text-center text-xl font-bold">
                    <span id="timer">00:00</span>
                  </div>
                  <input
                    type="hidden"
                    id="duration"
                    value="<%= (meditate.minutes * 60)+meditate.seconds %>"
                  />
                </div>
              </div>
              <div class="flex flex-1 px-4">
                <button class="btn btn-primary my-auto w-full" id="btnStart">
                  Start
                </button>
              </div>
            </div>
            <%}else{%>
            <div class="my-3 flex flex-1 mx-auto">
              <a class="btn btn-secondary" href="/auth/login">
                <%= __('timer') %>
              </a>
            </div>
            <%}%>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-3">
              <div>
                <% if (meditate.steps.length > 0) { %>
                <ul class="list bg-base-100 rounded-box shadow-md">
                  <li class="p-4 pb-2 text-lg opacity-90 tracking-wide">
                    Meditation's steps
                  </li>
                  <% for(var i = 0; i < meditate.steps.length;i++){%>
                  <li class="list-row">
                    <div class="text-4xl font-thin opacity-30 tabular-nums">
                      <%= i+1 < 10 ? '0'+(i+1) : i+1 %>
                    </div>
                    <div class="list-col-grow">
                      <div>Step <%= meditate.steps[i].number %></div>
                      <div class="text-sm font-semibold opacity-60">
                        <%= meditate.steps[i].description %>
                      </div>
                    </div>
                  </li>
                  <%}%>
                </ul>
                <%}else{%>
                <div class="text-center text-xl">No steps available</div>
                <%}%>
              </div>
              <div>
                <% if (meditate.helps.length > 0) { %>
                <div class="join join-vertical bg-base-100 w-full">
                  <div class="text-xl mb-2">Helps</div>
                  <% for(var i = 0; i < meditate.helps?.length;i++){%>
                  <div
                    class="collapse collapse-arrow join-item border-base-300 border"
                  >
                    <input type="radio" name="my-accordion-4" />
                    <div class="collapse-title font-semibold">
                      <%= meditate.helps[i].question %>
                    </div>
                    <div class="collapse-content text-sm">
                      <%= meditate.helps[i].answer %>
                    </div>
                  </div>
                  <%}%>
                </div>
                <%}else{%>
                <div class="text-center text-xl">No help available</div>
                <%}%>
              </div>
              <div class="flex flex-1">
                <a
                  href="javascript:window.history.back();"
                  class="btn btn-primary"
                  ><%= __('back') %></a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ./partial/footer.ejs %>
  </body>
  <script src="/javascripts/aos.js"></script>
  <script src="/javascripts/jquery-3.7.1.min.js"></script>
  <script>
    $("#btnStart").click(function () {
      $(this).addClass("btn-disabled");
      let duration = $("#duration").val();
      const timerEl = document.getElementById("timer");
      const interval = setInterval(() => {
        const min = Math.floor(duration / 60);
        const sec = duration % 60;
        timerEl.textContent = `${String(min).padStart(2, "0")}:${String(
          sec
        ).padStart(2, "0")}`;
        if (--duration < 0) {
          clearInterval(interval);
          closePlayer();
        }
      }, 1000);

      const mediaType = "<%= meditate.mediaType %>";
      if (mediaType == "MP3") {
        const mp3Player = document.getElementById("mediaMP3");
        mp3Player.play();
      } else {
        // let player;
        // function onYouTubeIframeAPIReady() {
        //   player = new YT.Player("ytplayer");
        // }
        // player.playVideo();
      }
      function closePlayer() {
        if (mediaType == "MP3") {
          const mp3Player = document.getElementById("mediaMP3");
          mp3Player.pause();
        } else {
          // let player;
          // function onYouTubeIframeAPIReady() {
          //   player = new YT.Player("ytplayer");
          // }
          // player.playVideo();
        }
        const endSound = document.getElementById("endSound");
        endSound.play();
        $("#btnStart").removeClass("btn-disabled");
      }
    });
  </script>
</html>
